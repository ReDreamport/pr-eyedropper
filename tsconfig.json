{
  "compilerOptions": {
    "target": "ES2015",
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "stripInternal": true,
    "declaration": false,
    "outDir": "../build",
    "pretty": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "removeComments": true,
    "typeRoots" : ["./typings", "./node_modules/@types"]
  },
  "include": [
    "src/**/*.ts"
  ]
}
